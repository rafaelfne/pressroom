generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id             String     @id @default(cuid())
  name           String
  slug           String     @unique
  logo           String?
  primaryColor   String?
  secondaryColor String?
  accentColor    String?
  fontFamily     String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  templates      Template[]

  @@map("organizations")
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  username       String        @unique
  name           String?
  /// Nullable to support OAuth-only users who authenticate without a password.
  hashedPassword String?
  avatarUrl      String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  accounts       Account[]
  sessions       Session[]

  // Templates this user owns
  ownedTemplates   Template[]       @relation("TemplateOwner")
  // Templates shared with this user
  templateAccesses TemplateAccess[] @relation("UserAccess")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Template {
  id                 String        @id @default(cuid())
  name               String
  description        String?
  templateData       Json          @default("{}")
  sampleData         Json?
  pageConfig         Json?
  headerFooterConfig Json?
  organizationId     String?
  organization       Organization? @relation(fields: [organizationId], references: [id])
  ownerId            String?
  owner              User?         @relation("TemplateOwner", fields: [ownerId], references: [id])
  version            Int           @default(1)
  tags               String[]      @default([])
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  deletedAt          DateTime?
  accesses           TemplateAccess[]

  @@index([organizationId])
  @@index([ownerId])
  @@map("templates")
}

model TemplateAccess {
  id         String   @id @default(cuid())
  templateId String
  userId     String
  grantedBy  String
  grantedAt  DateTime @default(now())

  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user     User     @relation("UserAccess", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([templateId, userId])
  @@map("template_accesses")
}
